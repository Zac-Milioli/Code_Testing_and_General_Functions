#:kivy 1.0

<Gerenciador>:
    Menu:
        name:
            'menu'
    TaskList:
        name:
            'task_list'

<Menu>:
    BoxLayout:
        orientation:
            'vertical'
        padding:
            100
        spacing:
            15
        Image:
            source:
                'skyrim_fake_png.png'
            size_hint_y:
                None
            height:
                200
            allow_strecth:
                True
        Button:
            text:
                'Tarefas'
            on_release:
                app.root.current = 'task_list'
        Button:
            text:
                'Assistente'
        Button:
            text:
                'Sair'
            on_release:
                app.stop()

<TaskList>:
    BoxLayout:
        orientation:
            'vertical'
        ScrollView:
            BoxLayout:
                id:box
                orientation:
                    'vertical'
                size_hint_y:
                    None
                height:
                    self.minimum_height
        BoxLayout:
            size_hint_y:
                None
            height:
                60
            TextInput:
                id:texto
            Button:
                text:
                    '+'
                size_hint_x:
                    None
                width:
                    60
                on_release:
                    root.addWidget()

<Tarefa>:
    size_hint_y:
        None
    Label:
        id:label
        font_size:
            30
    Button:
        text:
            'X'
        size_hint_x:
            None
        width:
            60
        on_release:
            app.root.get_screen('task_list').ids.box.remove_widget(self.parent)

